{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",                       // ✅ Required for ESM
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,      // ✅ Required for `.ts` imports
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["server.ts"]
}
